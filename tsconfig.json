{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": true,
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // "noImplicitReturns": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "resolveJsonModule": true,
        "module": "NodeNext",
        "target": "ES2022",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ],
}